{
	"name": "live-comment-viewer",
	"description": "A live comment viewer for Reddit.",
	"version": "1.0.0",
	"main": "./src/index.jsx",
	"dependencies": {
		"debug": "^4.1.1",
		"prop-types": "^15.7.2",
		"react": "^16.10.2",
		"react-dom": "^16.10.2",
		"snuownd": "^1.1.0",
		"styled-components": "^4.4.0"
	},
	"devDependencies": {
		"@types/debug": "^4.1.5",
		"@types/prop-types": "^15.7.3",
		"@types/react": "^16.9.51",
		"@types/react-dom": "^16.9.8",
		"@types/styled-components": "^5.1.4",
		"@types/webpack-env": "^1.15.3",
		"@typescript-eslint/eslint-plugin": "^4.4.0",
		"@typescript-eslint/parser": "^4.4.0",
		"babel-eslint": "^10.0.3",
		"eslint": "^7.24.0",
		"eslint-config-haykam": "^1.10.0",
		"eslint-plugin-extra-rules": "^0.0.0-development",
		"eslint-plugin-html": "^6.1.2",
		"eslint-plugin-jsdoc": "^32.3.0",
		"eslint-plugin-json": "^2.1.2",
		"eslint-plugin-markdown": "^2.0.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-unicorn": "^28.0.2",
		"file-loader": "^4.2.0",
		"fork-ts-checker-webpack-plugin": "^5.2.0",
		"html-minify-loader": "^1.4.0",
		"jsx-loader": "^0.13.2",
		"ts-loader": "^8.0.4",
		"typescript": "^4.0.3",
		"webpack": "^4.41.2",
		"webpack-cli": "^3.3.9"
	},
	"scripts": {
		"build": "webpack --config webpack.config.js",
		"lint": "eslint \"./**/*.js\" \"./**/*.ts\" \"./**/*.tsx\" --ignore-path .gitignore"
	},
	"eslintConfig": {
		"extends": [
			"eslint-config-haykam",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"rules": {
			"valid-jsdoc": [
				"error",
				{
					"prefer": {
						"arg": "param",
						"argument": "param",
						"return": "returns"
					},
					"preferType": {
						"object": "Object"
					},
					"requireParamDescription": true,
					"requireParamType": false,
					"requireReturn": false,
					"requireReturnDescription": false,
					"requireReturnType": false
				}
			],
			"semi": "off",
			"@typescript-eslint/semi": "error",
			"no-shadow": "off",
			"@typescript-eslint/no-shadow": "error",
			"sort-imports": "error"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/haykam821/Live-Comment-Viewer.git"
	},
	"keywords": [
		"reddit",
		"live",
		"websocket",
		"comment"
	],
	"author": "haykam821",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/haykam821/Live-Comment-Viewer/issues"
	},
	"homepage": "https://github.com/haykam821/Live-Comment-Viewer#readme"
}
